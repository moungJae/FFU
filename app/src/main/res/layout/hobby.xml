<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scrollbarSize="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신의 취미는 무엇인가요?"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/main_text_color"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개 이상 선택하세요."
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="영화"
                android:textColor="@color/black"
                android:id="@+id/hobby1"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="독서"
                android:textColor="@color/black"
                android:id="@+id/hobby2"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="맛집탐방"
                android:textColor="@color/black"
                android:id="@+id/hobby3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="운동"
                android:textColor="@color/black"
                android:id="@+id/hobby4"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="캠핑"
                android:textColor="@color/black"
                android:id="@+id/hobby5"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="멍때리기"
                android:textColor="@color/black"
                android:id="@+id/hobby6"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="카페"
                android:textColor="@color/black"
                android:id="@+id/hobby7"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="등산"
                android:textColor="@color/black"
                android:id="@+id/hobby8"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="여행"
                android:textColor="@color/black"
                android:id="@+id/hobby9"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="쇼핑"
                android:textColor="@color/black"
                android:id="@+id/hobby10"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="산책"
                android:textColor="@color/black"
                android:id="@+id/hobby11"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="수다"
                android:textColor="@color/black"
                android:id="@+id/hobby12"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="수면"
                android:textColor="@color/black"
                android:id="@+id/hobby13"/>


        </LinearLayout>


    </ScrollView>
    <Button
        android:layout_width="270sp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text = "선택 완료"
        android:id="@+id/hobby_exitButton"
        android:background="@drawable/box_button"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>